block scripts
  script.
    $(function(){
        $('#products-table').DataTable({
            pageLength: 10,
            fixedHeader: true,
            responsive: true,
            "sDom":     'rtip',
        });
        var table = $('#products-table').DataTable();
        $('#key-search').on( 'keyup', function () {
            table.search( this.value ).draw();
        });
        $('#type-filter').on('change', function(){
            table.column(2).search($(this).val()).draw();
        });
    });
