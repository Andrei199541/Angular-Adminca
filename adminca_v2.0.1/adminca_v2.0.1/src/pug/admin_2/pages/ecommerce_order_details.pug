      .ibox
        .ibox-body
          h5.font-strong.mb-5 Products List
          table.table.table-bordered.table-hover
            thead.thead-default.thead-lg
              tr
                th ID
                th Product
                th Price
                th QTY
                th Total
            tbody
              tr
                td 3
                td
                  +img('products/16.jpg')(class='mr-3', width='60')
