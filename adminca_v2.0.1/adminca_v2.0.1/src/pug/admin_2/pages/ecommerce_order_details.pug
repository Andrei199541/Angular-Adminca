                td 1
                td $416
          .d-flex.justify-content-end
            .text-right(style='width:300px')
              .row.mb-2
                .col-6 Subtotal Price
                .col-6 $1265
              .row.mb-2
                .col-6 Discount 5%:
                .col-6 -$63.25
              .row.font-strong.font-20
                .col-6 Total Price:
                .col-6
                  .h3.font-strong $1201.71
    .col-xl-5
      .ibox
        .ibox-body
          h5.font-strong.mb-4 Order Information
          .row.align-items-center.mb-3
            .col-4.text-light Total Price
            .col-8.h3.font-strong.text-pink.mb-0 $1201.71
