block page_styles
  style.
    .colors-boxes .color-box{
      margin-bottom:20px;
      border: 1px solid #eee;
    }
    .color-box .color-view {
      position: relative;
      padding: 35px 10px;
        text-align: center;
        font-size: 18px;
    }
    .color-box .color-name {
        padding: 7px;
        text-align: center;
        font-weight: 600;
    }
    .color-box .color-name small {display:block;font-weight:400;}
    .color-palette {
        padding: 10px 15px;
        color: #fff;
    }