extends ../layout.pug

block variables
  - var pageTitle = 'Horizontal Timeline'
  - var pageUrl = 'timeline_horizontal.html'
  - var page_heading = 'Horizontal Timeline'
  - var path = ['Pages', 'Horizontal Timeline']

block page_styles
  +link('horizontal-timeline/horizontal-timeline.css','plugin')

block plugins
  +script('horizontal-timeline/horizontal-timeline.js', 'plugin')

