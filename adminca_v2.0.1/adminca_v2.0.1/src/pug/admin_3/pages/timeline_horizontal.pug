                            li
                                a(href='#0', data-date='30/08/2018') 30 Aug
                            li
                                a(href='#0', data-date='15/09/2018') 15 Sep
                            li
                                a(href='#0', data-date='01/11/2018') 01 Oct
                        span.filling-line(aria-hidden='true')
                    // .events
                // .events-wrapper
                ul.cd-timeline-navigation
                    li
                        a.prev.inactive(href='#0')
